<Window x:Class="GithubDisplay.MenuButtonExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GithubDisplay"
        mc:Ignorable="d"
        Title="MenuButtonExample" Height="300" Width="300">
    <StackPanel>
        <Menu>
            <Menu.Items>
                <MenuItem Header="Test" Click="MenuItem_Click"></MenuItem>
                <MenuItem Header="Test2" Click="MenuItem_Click"></MenuItem>
            </Menu.Items>
        </Menu>
        <MenuItem Header="Click Me" MouseEnter="MenuItem_MouseEnter" MouseLeave="MenuItem_MouseLeave">
            <MenuItem Header="Nav 1" Click="MenuItem_Click"></MenuItem>
            <MenuItem Header="Nav 2" Click="MenuItem_Click"></MenuItem>
        </MenuItem>
    </StackPanel>
</Window>
